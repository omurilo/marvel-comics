  "dependencies": {
    "@commercial/jwt": "^2.0.0",
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.1.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "bcrypt": "^5.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-sentry": "^3.1.0",
    "hapi-swagger": "^14.1.0",
    "joi": "^17.4.0",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.5.4",
    "sequelize": "^6.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.12.17",
    "@babel/plugin-transform-runtime": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/register": "^7.12.13",
    "@types/jest": "^26.0.20",
    "@types/sequelize": "^4.28.9",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sequelize-cli": "^6.2.0",
    "uuid": "^3.4.0"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=development jest --detectOpenHandles",
    "coverage": "cross-env NODE_ENV=development jest --detectOpenHandles --coverage",
    "test:prod": "cross-env NODE_ENV=production npm run test",
    "prod": "cross-env NODE_ENV=production npm run build && pm2-runtime dist/index.js",
    "start": "pm2 start babel-node src/index.js",
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "babel src -d dist",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "docker:dev": "docker-compose --env-file config/.env.development up -d"
  }
}
